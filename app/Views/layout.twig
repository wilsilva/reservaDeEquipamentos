<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/bower_components/bootswatch-dist/css/bootstrap.min.css">
    <title>Reserva de Equipamentos</title>
</head>
<body>
{% for error in app.session.getFlashBag.get('error') %}
    <div class="container" style="margin-top: 1%; text-align: center;">
        <div class="row">
            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert" href="#">×</a>
                {{ error }}
            </div>
        </div>
    </div>
{% endfor %}
{% for error in app.session.getFlashBag.get('success') %}
    <div class="container" style="margin-top: 1%; text-align: center;">
        <div class="row">
            <div class="alert alert-success">
                <a class="close" data-dismiss="alert" href="#">×</a>
                {{ error }}
            </div>
        </div>
    </div>
{% endfor %}
{% for error in app.session.getFlashBag.get('warning') %}
    <div class="container" style="margin-top: 1%; text-align: center;">
        <div class="row">
            <div class="alert alert-warning">
                <a class="close" data-dismiss="alert" href="#">×</a>
                {{ error }}
            </div>
        </div>
    </div>
{% endfor %}
{% block content %} {% endblock %}
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>