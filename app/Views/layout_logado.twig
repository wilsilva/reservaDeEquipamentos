<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/bower_components/bootswatch-dist/css/bootstrap.min.css">
    <title>{% block title %}Reserva de Equipamentos{% endblock %}</title>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Reserva de Equipamentos</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/home">Página Inicial</a></li>
                <li><a href="/home/reservar">Reservar Equipamentos</a></li>
                {% if funcionario.nivelDeAcesso > 0 %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Administração
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/home/equipamentos">Equipamentos</a></li>
                            <li class="divider"></li>
                            <li><a href="/home/funcionarios">Funcionários</a></li>
                            {#<li class="divider"></li>#}
                            {#<li><a href="/home/status">Status</a></li>#}
                        </ul>
                    </li>
                {% endif %}
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="/home/sair">Sair</a></li>
            </ul>
        </div>
    </div>
</nav>

{% for error in app.session.getFlashBag.get('error') %}
    <div class="container" style="margin-top: 1%; text-align: center;">
        <div class="row">
            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert" href="#">×</a>
                {{ error }}
            </div>
        </div>
    </div>
{% endfor %}
{% for error in app.session.getFlashBag.get('success') %}
    <div class="container" style="margin-top: 1%; text-align: center;">
        <div class="row">
            <div class="alert alert-success">
                <a class="close" data-dismiss="alert" href="#">×</a>
                {{ error }}
            </div>
        </div>
    </div>
{% endfor %}
{% for error in app.session.getFlashBag.get('warning') %}
    <div class="container" style="margin-top: 1%; text-align: center;">
        <div class="row">
            <div class="alert alert-warning">
                <a class="close" data-dismiss="alert" href="#">×</a>
                {{ error }}
            </div>
        </div>
    </div>
{% endfor %}

{% block content %} {% endblock %}

<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>