{% extends "layout_logado.twig" %}
{% block title %} Funcionários {% endblock %}
{% block content %}

    <section class="container">
        <header class="row">
            <div class="col-md-12">
                <h1>Funcionários</h1>
            </div>
        </header>
        <div class="row">
            <div class="col-md-2 col-md-offset-10">
                <a href="/home/funcionario/cadastro" class="btn btn-default">Cadastrar Novo</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>
                        <th>MASP</th>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th>Nivel de Acesso</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for funcionario in funcionarios %}
                        <tr>
                            <td>{{ funcionario.masp }}</td>
                            <td>{{ funcionario.nome }}</td>
                            <td>{{ funcionario.email }}</td>
                            {% if funcionario.nivelDeAcesso > 0 %}
                                <td>Administrador</td>
                            {% else %}
                                <td>Usuário Comum</td>
                            {% endif %}
                            <td>
                                <a href="/home/funcionario/alteracao/{{ funcionario.masp }}"
                                   class="btn btn-warning">Alterar</a>
                                <a href="/home/funcionario/remover/{{ funcionario.masp }}"
                                   class="btn btn-danger">Remover</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>

{% endblock %}